@model louindiegames.Models.Game

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Game</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Title
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>
    </dl>
    <dl class="dl-horizontal">
        <dt>
            Creator
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Creator.CreatorName)
         
           @* @Html.ActionLink(@model => Creator.CreatorName, "Details", "Creators", new { id =  }, new object { }) *@
