@model louindiegames.Models.Game

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Game</h4>
        <hr />
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Title" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger" />
            </div>
        </div>
        <input asp-for="GameID" type="hidden" value="@Model.GameID" />
        <div class="col-md-10">
            <select asp-for="CreatorID" class="form-control">
                @foreach (SelectListItem s in (SelectList)ViewData["CreatorID"])
                {
                    <option value="@s.Value">@s.Text</option>
                 }
            </select>
        </div>


       <!-- <div class="form-group">
            <label asp-for="Creator" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Creator" class="form-control" />
                <span asp-validation-for="Creator" class="text-danger" />
            </div>
        </div> -->
        <div class="form-group">
            <label asp-for="Screenshot" class="col-md-2 control-label"></label>
            <span>Please insert the address to a PNG image.</span>
            <div class="col-md-10">
                <input asp-for="Screenshot" class="form-control" />
                <span asp-validation-for="Screenshot" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
