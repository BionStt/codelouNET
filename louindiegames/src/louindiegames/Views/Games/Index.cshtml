@model IEnumerable<louindiegames.Models.Game>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th></th>
    </tr>
    
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.Title, "Details", "Creators", new { id = item.CreatorID }, new object {} )
        </td>
        <td>
            @Html.ActionLink(@item.Creator.CreatorName,  "Details", "Creators", new { id = item.CreatorID}, new object {} ) |
            <a asp-action="Edit" asp-route-id="@item.GameID">Edit</a> |
            <a asp-action="Details" asp-route-id="@item.GameID">Details</a> |
           <!-- <a asp-action="Delete" asp-route-id="@item.GameID">Delete</a> -->
        </td>
    </tr>
}
</table>
